<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jk.mapper.GoodKcMapper">


    <select id="getSx" resultType="mallattr">
        select id,shxm_mch from t_mall_attr where flbh2=#{id}
    </select>

    <select id="getValue" resultType="mallValue">
        select id,shxzh from t_mall_value where shxm_id=#{id}
    </select>



 <!--   List<MallSku> getkucuns(MallSku t);-->
    <select id="getkucuns" resultType="MallSku">
    SELECT k.*,s.shp_mch shp_mch  FROM t_mall_sku k,t_mall_product s WHERE k.shp_id=s.Id
   </select>
    
    <insert id="addSku">
        insert into t_mall_sku(shp_id,kc,jg,sku_mch,chjshj) value(#{shp_id},#{kc},#{jg},#{sku_mch},curdate())
    </insert>

    <!--void addSkuAndattrAndvalue(@Param("attrVal") ArrayList<MallValue> attrVal);-->
    <insert id="addSkuAndattrAndvalue" parameterType="java.util.List">
        insert into t_mall_sku_attr_value(
        <foreach collection="attrVal" item="att" separator=",">
            #{att.shxm_id},#{att.shxzh_id},
        </foreach>
        att.shp_id,curdate(),last_insert_id())

    </insert>

    <select id="getGoodName" resultType="goods">
        select id,shp_mch from t_mall_product where pp_id=#{id}

    </select>
</mapper>